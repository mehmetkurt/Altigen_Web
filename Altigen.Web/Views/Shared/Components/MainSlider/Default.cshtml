<div class="swiper main-slider">
    <div class="swiper-wrapper">
        <div class="swiper-slide d-flex align-items-center justify-content-center bg-dark text-white" style="background-image: url('https://rimparusa.com/yukleme/product/1-carpet-washing-machines-4.jpg'); background-size: cover; background-position: center;">
